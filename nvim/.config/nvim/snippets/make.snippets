snippet strict
	# https://tech.davis-hansson.com/p/make/
	SHELL := bash
	.ONESHELL:
	.SHELLFLAGS := -eu -o pipefail -c
	.DELETE_ON_ERROR:
	MAKEFLAGS += --warn-undefined-variables
	MAKEFLAGS += --no-builtin-rules

	# !! \`Makefile\` must use tabs !!

	# first command is what get runs by default
	build:
		touch $@

	.PHONY: clean
	clean:
		rm -f build
